<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >


    <ToggleButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/inorout"
        android:checked="true"
        android:enabled="true"
        android:focusable="false"
        android:background="@drawable/toggle_selector"
        android:textOff=" "
        android:textOn=" "
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Εισαγωγή στους αλγόριθμους και στις βάσεις δεδομένων"
        android:id="@+id/subjectToAdd"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/inorout"
        android:layout_toEndOf="@+id/inorout"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(H/Y2100)"
        android:id="@+id/subjectCode"
        android:layout_below="@+id/subjectToAdd"
        android:layout_toRightOf="@+id/inorout"
        android:layout_toEndOf="@+id/inorout"
        android:paddingLeft="5dp"
        android:textSize="13sp"
        android:textStyle="italic"
        android:textColor="@color/material_blue_500" />
</RelativeLayout>