<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="Μάθημα 1"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:ellipsize="marquee"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textColor="#536878"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/grade"
        android:layout_toStartOf="@+id/grade">
    </TextView>


    <TextView

        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center|center_horizontal"
        android:text="8.0"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:paddingRight="10dp"
        android:textColor="#2a623d"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ECTSLabel"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ΔΜ:"
        android:id="@+id/DMLabel"
        android:layout_toRightOf="@+id/grade"
        android:layout_toEndOf="@+id/grade"
        android:layout_alignBottom="@+id/DM"
        android:textSize="11sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECTS:"
        android:id="@+id/ECTSLabel"
        android:layout_alignBaseline="@+id/grade"
        android:layout_alignBottom="@+id/grade"
        android:layout_toLeftOf="@+id/ECTS"
        android:layout_toStartOf="@+id/ECTS"
        android:textSize="11sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/DM"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/DMLabel"
        android:layout_toEndOf="@+id/DMLabel"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="#5f9ea0"
        android:paddingLeft="3dp"
        android:paddingRight="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/ECTS"
        android:layout_alignBaseline="@+id/ECTSLabel"
        android:layout_alignBottom="@+id/ECTSLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="#5f9ea0"
        android:paddingRight="5dp"
        android:paddingLeft="3dp"
        />


</RelativeLayout>