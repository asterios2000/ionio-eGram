<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/subscriptionicon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:src="@drawable/ic_subject" />

    <TextView
        android:id="@+id/subjectType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignBottom="@+id/subjectCode"
        android:layout_toRightOf="@+id/subjectCode"
        android:layout_toEndOf="@+id/subjectCode"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Τύπος:YE"
        android:textSize="11sp"
        android:textStyle="italic"
        android:paddingLeft="5dp" />

    <TextView
        android:id="@+id/subjectTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/subjectType"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/subscriptionicon"
        android:gravity="center_vertical"
        android:text="Τίτλος Μαθήματος"
        android:textSize="14sp"
        android:textStyle="bold"
        android:lines="2"
        android:ellipsize="marquee" />

    <TextView
        android:id="@+id/subjectSemester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="ΣΤ Εξάμηνο"
        android:textSize="11sp"
        android:textStyle="italic"
        android:layout_alignBottom="@+id/subjectType"
        android:layout_toRightOf="@+id/subjectType"
        android:layout_toEndOf="@+id/subjectType"
        android:paddingLeft="5dp" />

    <TextView
        android:id="@+id/subjectDM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="5 ΔΜ"
        android:textSize="11sp"
        android:textStyle="italic"
        android:paddingLeft="5dp"
        android:layout_below="@+id/subjectTitle"
        android:layout_toRightOf="@+id/subjectSemester"
        android:layout_toEndOf="@+id/subjectSemester" />

    <TextView
        android:id="@+id/subjectHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="6 Ώρες"
        android:textSize="11sp"
        android:textStyle="italic"
        android:paddingLeft="5dp"
        android:layout_alignBottom="@+id/subjectDM"
        android:layout_toRightOf="@+id/subjectDM"
        android:layout_toEndOf="@+id/subjectDM" />

    <TextView
        android:id="@+id/subjectECTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="2 ECTS"
        android:textSize="11sp"
        android:textStyle="italic"
        android:paddingLeft="5dp"
        android:layout_alignBottom="@+id/subjectHours"
        android:layout_toRightOf="@+id/subjectHours"
        android:layout_toEndOf="@+id/subjectHours" />

    <TextView
        android:id="@+id/subjectCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="11sp"
        android:textStyle="italic"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/subscriptionicon"
        android:text="Κωδ:(H/Y100)"
        />


</RelativeLayout>